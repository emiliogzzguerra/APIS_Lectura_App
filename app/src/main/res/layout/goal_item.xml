<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="4dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:padding="8dp"
        android:layout_gravity="center"
        android:minHeight="100dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <ImageView
            android:padding="4dp"
            android:id="@+id/goal_book_cover_img"
            android:layout_width="52dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/monje" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/goal_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Titulo Libro" />
            <TextView
                android:id="@+id/pages_for_today"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Paginas por leer hoy" />
            <TextView
                android:id="@+id/reading_streak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Record de dias seguidos" />
            <TextView
                android:id="@+id/remaining_pages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Paginas restantes" />

            <TextView
                android:id="@+id/target_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="20/11/2018" />

            <ProgressBar
                android:id="@+id/goal_progress"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="false"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:minHeight="32dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="25" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>